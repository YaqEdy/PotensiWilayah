 public function getPembayaranSewa($tgl_trans) {
        $data = array();
        $this->db->from('trans_sewa');
        $this->db->where('YEAR(tgl_trans)', $tgl_trans['year']);
        $this->db->where('MONTH(tgl_trans)', $tgl_trans['month']);
        $this->db->order_by("tgl_trans", "asc");
        $result = $this->db->get();
// ob_clean(); 
// echo $this->db->last_query();
// exit();
        foreach ($result->result() as $row) {
            $data[] = array(
                'id_sewa' => $row->id_sewa,
                'tgl_trans' => $row->tgl_trans,
                'trans_pokok' => $row->trans_pokok,
                'trans_pl' => $row->trans_pl
            );
        }
        return $data;
    }
}
